{% extends 'basedash.html.twig' %}

{% block title %}
    Admin | Rajouter {{ slug }}
{% endblock %}

{% block body %}
<div class="container-fluid">
  <h1>Rajouter {{ slug }}</h1>
    {{ form_start(form, {attr: {class: 'form-group'} }) }}
        {{ form_label(form.name, slug, {label_attr: {class: 'form-control-label'} }) }}
        {{ form_row(form.name, {attr: {class: 'form-control-lg'} }) }}
        {{ form_row(form.save, {attr: {class: 'btn btn-lg btn-success'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
